<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 给实体类定义别名 -->
    <typeAliases>
        <package name="com.yj.resume.vo"/>
    </typeAliases>
    <environments default="dev">
        <!-- 配置数据库环境 -->
        <environment id="dev">
            <transactionManager type="JDBC"></transactionManager>
            <!-- POOLED:数据库连接池 -->
            <dataSource type="POOLED">
                <property name="driver" value="org.gjt.mm.mysql.Driver"/>
                <property name="username" value="root"/>
                <property name="password" value="980423"/>
                <property name="url"
                          value="jdbc:mysql://localhost:3306/ztc?useUnicode=true&amp;characterEncoding=utf-8"/>
            </dataSource>
        </environment>
    </environments>
    <!-- 注册SQL  xxxMapper文件(这一步不能忘!!!) -->
    <mappers>
        <mapper class="com.yj.resume.mapper.ResumeMapper"/>
        <mapper class="com.yj.resume.mapper.ResumeExposMapper"/>
        <mapper class="com.yj.resume.mapper.ResumePerInfoMapper"/>
        <mapper class="com.yj.resume.mapper.ResumeInternshipMapper"/>
        <mapper class="com.yj.resume.mapper.ResumeProjectMapper"/>
    </mappers>
</configuration>